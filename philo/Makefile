# **************************************************************************** #
# -------------------------------- VARIABLES --------------------------------- #
# **************************************************************************** #
NAME	:= philo
ARGS	:=

INC_DIR	:= inc
OBJ_DIR	:= obj
SRC_DIR	:= src

COMPILE	:= gcc
C_FLAGS	:= -Wall -Wextra -Werror
L_FLAGS	:= -lpthread
HEADERS	:= -I$(INC_DIR)

OS		:= $(shell uname)
REMOVE	:= rm -rf

ifeq ($(OS),Linux)
	C_FLAGS += $(L_FLAGS)
endif
# **************************************************************************** #
# -------------------------------- ALL * FILES ------------------------------- #
# **************************************************************************** #
INCS	:=	$(wildcard $(INC_DIR)/*.h)
SRCS	:=	$(wildcard $(SRC_DIR)/*.c)
OBJS	:=	$(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRCS))
# **************************************************************************** #
# --------------------------------- C FILES ---------------------------------- #
# **************************************************************************** #
# SRC		:=
# **************************************************************************** #

# **************************************************************************** #
# --------------------------------- H FILES ---------------------------------- #
# **************************************************************************** #
# INC		:=
# **************************************************************************** #
# -------------------------------- ALL FILES --------------------------------- #
# **************************************************************************** #
# INCS		:=	$(addprefix $(INC_DIR)/, $(addsuffix .h, $(INC)))
# SRCS		:=	$(addprefix $(SRC_DIR)/, $(addsuffix .c, $(SRC)))
# OBJS		:=	$(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRCS))
# **************************************************************************** #
# ---------------------------------- RULES ----------------------------------- #
# **************************************************************************** #
all: $(NAME)

$(NAME): $(OBJS)
	@$(COMPILE) $(C_FLAGS) $(OBJS) -o $@
	@echo "$@ is ready"

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c $(INCS) | $(OBJ_DIR)
	@$(COMPILE) $(C_FLAGS) $(HEADERS) -c $< -o $@

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

clean:
	@$(REMOVE) $(OBJ_DIR)
	@echo "Object files removed"

fclean: clean
	@$(REMOVE) $(NAME)
	@echo "$(NAME) removed"

re: fclean all

.PHONY: all clean fclean re
# **************************************************************************** #
# ---------------------------------- PDF ------------------------------------- #
# **************************************************************************** #
PDF		:= philo_en.pdf
GIT_URL := https://github.com/SaydRomey/42_ressources
PDF_URL = $(GIT_URL)/blob/main/pdf/$(PDF)?raw=true
OS		= $(shell uname -s)

pdf:
	@curl -# -L $(PDF_URL) -o $(PDF)
ifeq ($(OS),Darwin)
	@open $(PDF)
else
	@xdg-open $(PDF) || echo "Please install a compatible PDF viewer"
endif

.PHONY: pdf
# **************************************************************************** #

